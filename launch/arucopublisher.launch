<?xml version="1.0"?>
<launch>

    <arg name="markerSize"      default="0.015"/>    <!-- in m -->
    <arg name="side"            default="left"/>
    <arg name="ref_frame"       default=""/>  <!-- leave empty and the pose will be published wrt param parent_name -->

    <node pkg="aruco_ros" type="marker_publisher" name="aruco_marker_publisher_right">
        <remap from="/camera_info" to="/cameras/right_hand_camera/camera_info" />
        <remap from="/image" to="/cameras/right_hand_camera/image" />
        <param name="use_camera_info"    value="True"/>
        <param name="image_is_rectified" value="False"/>
        <param name="marker_size"        value="$(arg markerSize)"/>
        <param name="reference_frame"    value="$(arg ref_frame)"/>   <!-- frame in which the marker pose will be refered -->
        <param name="camera_frame"       value="/right_hand_camera"/>
    </node>

</launch>